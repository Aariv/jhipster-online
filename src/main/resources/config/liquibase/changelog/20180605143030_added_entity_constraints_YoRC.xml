<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity YoRC.
    -->
    <changeSet id="20180605143030-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="yo_rc"
                                 constraintName="fk_yorc_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="yorcs_id"
                                 baseTableName="yorc_languages"
                                 constraintName="fk_yorc_languages_yorcs_id"
                                 referencedColumnNames="id"
                                 referencedTableName="yo_rc"/>
        <addForeignKeyConstraint baseColumnNames="languages_id"
                                 baseTableName="yorc_languages"
                                 constraintName="fk_yorc_languages_languages_id"
                                 referencedColumnNames="id"
                                 referencedTableName="language"/>
        
    </changeSet>
</databaseChangeLog>
